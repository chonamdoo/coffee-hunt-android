<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/rotate_map_to_callibrate_compass"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.indoorway.android.fragments.sdk.map.IndoorwayCalibrationCompassFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvInstruction" />

    <Button
        android:id="@+id/btnNext"
        style="@style/ScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/next"
        android:layout_alignParentEnd="true" />

</RelativeLayout>